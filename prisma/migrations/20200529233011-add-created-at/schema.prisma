datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Poll {
  id                   String   @default(cuid()) @id
  slug                 String   @unique
  title                String
  options              Option[]
  allowMultipleOptions Boolean
}

model Option {
  id        String   @default(cuid()) @id
  name      String
  createdAt DateTime @default(now())
  votes     Int      @default(0)
  Poll      Poll     @relation(fields: [pollId], references: [id])
  pollId    String
}
