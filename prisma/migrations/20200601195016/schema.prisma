datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Poll {
  id                   String   @default(cuid()) @id
  slug                 String   @unique
  title                String
  options              Option[]
  allowMultipleOptions Boolean
  Blacklist            Ip[]
  @@index([slug])
  @@map("Polls")
}

model Option {
  id        String   @default(cuid()) @id
  key       Int      @default(0)
  name      String
  createdAt DateTime @default(now())
  votes     Int      @default(0)
  Poll      Poll     @relation(fields: [pollId], references: [id])
  pollId    String
  @@map("Options")
}

model Ip {
  id     String @default(cuid()) @id
  ip     String
  Poll   Poll   @relation(fields: [pollId], references: [id])
  pollId String
  @@index([ip])
  @@map("Ips")
}
